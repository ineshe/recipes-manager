{% extends 'base.html.twig' %}

{% block title %}
    Recipes
{% endblock %}

{% block body %}

    <section class="flex max-sm:flex-col max-w-screen-xl xl:mx-auto mx-8 my-10 sm:h-[450px] shadow">
        {% set recipeDemo = random(recipes) %}
        <div class="max-sm:order-2 max-sm:w-full max-sm:py-8 bg-primary-color grow px-8 py-16 w-2/6">
            <h2 class="text-3xl uppercase text-white mb-2">Unser Tipp des Tages</h2>
            <p class="text-text-color">{{ recipeDemo.title }}</p>
            <button class="py-2.5 px-3 mt-6 text-text-color font-semibold uppercase 
                border-2 border-text-color rounded-sm bg-transparent hover:text-white hover:bg-text-color transition duration-300"
            >Hier klicken</button>
        </div>
        <img class="max-sm:order-1 max-sm:w-full w-4/6 object-cover object-center h-[450px]" 
            src="{{ recipeDemo.getImageUrl(900) }}"/>
    </section>

    <section class="max-w-screen-xl xl:mx-auto mx-8 my-10">
        <h2 class="max-sm:text-center text-3xl uppercase text-secondary-color mb-6">Rezepte</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-4 gap-8 ">
            {% for recipe in recipes %}
                <a class="bg-white shadow max-w-[600px] mx-auto" href="{{ path('app_recipe_show', { id: recipe.id }) }}">
                    <div class="overflow-hidden">
                        <img class="transition-transform duration-500 ease-out hover:scale-110" src="{{ recipe.getImageUrl(600) }}">
                    </div>
                    <p class="p-4 uppercase text-secondary-color font-semibold">{{ recipe.title }}</p>
                </a>
            {% endfor %}       
        </div>
    </section>

{% endblock %}
