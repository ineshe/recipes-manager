{% extends 'base.html.twig' %}

{% block title %}
    Recipes
{% endblock %}

{% block body %}
    <section class="max-w-screen-xl xl:mx-auto mx-8 my-10">
        <h2 class="text-3xl uppercase text-secondary-color mb-6">{{ recipe.title }}</h2>
        <img class="object-cover object-center w-full h-[500px]" src="{{ recipe.getImageUrl(1280) }}">
        <div class="flex">
            <div class="bg-primary-color w-2/6 p-8">
                <h3 class="uppercase text-white font-semibold text-2xl mb-4">Ingredients</h3>
                <div class="grid grid-cols-[2.5rem_1fr_2.5rem] grid-rows-[2.5rem] items-center text-secondary-color font-semibold pb-4" data-controller="ingredient">
                    <button class="bg-white border-2 border-secondary-color h-full" data-action="click->ingredient#decrease">-</button>
                    <p class="bg-white flex items-center justify-center border-y-2 border-secondary-color h-full"><span data-ingredient-target="servings">2</span>&nbsp;Portionen</p>
                    <button class="bg-white border-2 border-secondary-color h-full" data-action="click->ingredient#increase">+</button>                
                </div>
                <table class="text-secondary-color font-semibold w-full">
                    {% for recipeIngredient in recipe.recipeIngredients %}
                        
                        <tr class="border-b-2 border-secondary-color w-full">
                            <td class="text-right align-top max-w-32 py-2 pr-4">{{ recipeIngredient.amount }} {{ recipeIngredient.unit }}</td><td class="py-2">{{ recipeIngredient.ingredient.name }}</td>
                        </tr>
                    {% endfor %}                                  
                </table>
            </div>
            <div class="bg-white w-4/6 p-8">
                <h3 class="uppercase text-secondary-color font-semibold text-2xl mb-4">Method</h3>
                <div>
                    <ol class="list-decimal pl-4 space-y-4">
                        {% set paragraphs = recipe.method|nl_split %}
                        {% for paragraph in paragraphs %}
                            <li>{{ paragraph }}</li>
                        {% endfor %}
                    </ol>
                </div>
            </div>
        </div>
        
    </section>
{% endblock %}