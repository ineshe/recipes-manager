    <h1 class="text-4xl text-center"><a href="{{ path('app_homepage') }}">Recines</a></h1>
    <nav>
        <ul class="flex justify-center uppercase font-semibold">
            {% for category in categories %}
                <li class="flex items-center">
                    {% if not loop.first %}
                        <span>|</span>    
                    {% endif %}
                    <a href="{{ path('app_category_show', { title: category.title }) }}" 
                        class="p-2 hover:text-secondary-color {% if currentCategory is same as category.title %} text-secondary-color {% endif %}">{{ category.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    
