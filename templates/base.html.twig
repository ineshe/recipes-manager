<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {{ render(controller(
                'App\\Controller\\CategoryController::all',
                { 'currentCategory': app.request.attributes.get('title') }
            )) }}
        {% endblock %}
        {% block body %}{% endblock %}

        {% block cookie_consent %}
            {{ include('partials/_cookie-consent.html.twig') }}
        {% endblock %}

        {% block footer %}
            {{ include('partials/_footer.html.twig') }}
        {% endblock %}

        <script src="https://www.ines-heilmann.de/pages/main/includes/cookie-consent/cookie-consent.js"></script>
    </body>
</html>
